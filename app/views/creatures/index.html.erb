<h2>Creatures
    <%= link_to "new", new_creature_path, class: 'new-button btn btn-success btn-xs glyphicon glyphicon-plus pull-right' %>
</h2>
<% @creatures.each do |creature| %>
  <div class="well">
    <h4><%= creature.name %></h4>
    <%= creature.description %>
    <%= link_to 'permalink', creature, class: 'pull-right' %>
    <%= link_to "", edit_creature_path(creature), class: 'btn btn-primary btn-xs glyphicon glyphicon-pencil pull-right space-right' %>
    <%= link_to "", creature, method: :delete, class: 'btn btn-danger btn-xs glyphicon glyphicon-trash pull-right space-right' %>

  <p>
  <% creature.tags.each do |tag| %>
    <%= link_to "##{tag.name}", tag %>
  <% end %>
  </p>

  </div>
<% end %>



